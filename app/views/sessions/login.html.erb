<% provide(:title, "Log in") %>


<div class="middle-box text-center loginscreen  animated fadeInDown">
<div>
    <div>

        <h1 class="logo-name">RST</h1>

    </div>
    <h3>Welcome to ResortToken</h3>
    
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: "Email Address" %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>  
        </div>

        <% if @message.present? %>
        <div id="error_result">
          <div class="alert alert-danger">
            <%= @message %>
            <script type="text/javascript" charset="utf-8"> 
              var email = "<%= @userinfo[:email] || 'null' %>";
              var password = "<%= @userinfo[:password] || 'null' %>";
              $("#session_email").val(email);
              $("#session_password").val(password);
            </script>
          </div>
        </div>
        <% end %>
        <%= f.submit "Log in", class: "btn btn-primary block full-width m-b" %>
        <%= link_to "Forgot Password", new_password_reset_path %>
        <a href="<%= url_for :controller => 'users', :action => 'forgotpassword' %>"><small>Forgot password?</small></a>
        <p class="text-muted text-center"><small>Do not have an account?</small></p>
        <a class="btn btn-sm btn-white btn-block" href="<%= url_for :controller => 'users', :action => 'signup' %>">Create an account</a>
    <% end %>
</div>
<script>
document.getElementById("session_email").onblur = function() {
  $("#error_result").remove();
}
</script>
</div>